<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!-- res.partner -->
        <record id="view_partner_hubspot_tree" model="ir.ui.view">
            <field name="name">res.partner.hubpost</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <field name="display_name" position="before">
                    <button name="button_get_contact" type="object" string="HS Leggi dettaglio" groups="hubspot_connector.group_hubspot_manager,hubspot_connector.group_hubspot_user" icon="gtk-info"
                            attrs="{'invisible': [('hubspot_companies_ref', '=', False), ('hubspot_contacts_ref', '=', False)]}"/>
                    <field name="hubspot_companies_ref" groups="hubspot_connector.group_hubspot_manager,hubspot_connector.group_hubspot_user" />
                    <field name="hubspot_contacts_ref" groups="hubspot_connector.group_hubspot_manager,hubspot_connector.group_hubspot_user" />
                    <button name="hubspot_update_single_partner" type="object" string="HS Publish" groups="hubspot_connector.group_hubspot_manager,hubspot_connector.group_hubspot_user" icon="gtk-refresh"/>

                    <button name="button_open_hs_contact" type="object" string="Apri su hubspot" groups="hubspot_connector.group_hubspot_manager,hubspot_connector.group_hubspot_user" icon="gtk-zoom-fit"
                            attrs="{'invisible': [('hubspot_companies_ref', '=', False), ('hubspot_contacts_ref', '=', False)]}"/>
                </field>
            </field>
        </record>
        <record model="ir.ui.view" id="view_partner_hubspot_form">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="crm_newsletter_category.view_res_partner_newsletter_form"/>
            <field name="arch" type="xml">
                <field name="newsletter_category_id" position="before">
                    <field name="hubspot_companies_ref" groups="hubspot_connector.group_hubspot_manager,hubspot_connector.group_hubspot_user" />
                    <field name="hubspot_contacts_ref" groups="hubspot_connector.group_hubspot_manager,hubspot_connector.group_hubspot_user" />
                    <button name="button_delete_contact" type="object" string="HS GDPR Delete" groups="hubspot_connector.group_hubspot_manager,hubspot_connector.group_hubspot_user" confirm="Confermi la cencellazione del contatto GDPR compliant su Hubspot?"/>
                    <button name="hubspot_update_single_partner" type="object" string="HS Publish" groups="hubspot_connector.group_hubspot_manager,hubspot_connector.group_hubspot_user" icon="gtk-refresh"/>
                </field>
            </field>
        </record>

        <!-- hubspot.connector -->
        <record id="hubspot_connector_view_tree" model="ir.ui.view">
            <field name="name">hubspot.connector.tree.view</field>
            <field name="model">hubspot.connector</field>
            <field name="arch" type="xml">
                <tree string="hubspot_connector_tree">
                    <field name="name"/>
                    <field name="company_id"/>
                    <field name="domain"/>
                </tree>
            </field>
        </record>
        <record id="hubspot_connector_view_form" model="ir.ui.view">
            <field name="name">hubspot.connector.form.view</field>
            <field name="model">hubspot.connector</field>
            <field name="arch" type="xml">
                <form string="hubspot_connector_tree">
                    <header>
                        <button name="button_update_contact" type="object" string="Pubblica" />
                    </header>
                    <sheet>
                        <group colspan="4" col="4">
                            <field name="name"/>
                            <field name="company_id"/>

                            <notebook colspan="4">
                                <page name="parameter_page" string="Parametri">
                                    <group colspan="4" col="4">
                                        <separator string="Parametri connessione" colspan="4"/>
                                        <field name="endpoint" colspan="4" />
                                        <field name="domain" />
                                        <field name="hubspot_code" />
                                        <field name="token" password="1" />
                                        <field name="user_token" password="1" />
                                    </group>
                                </page>
                                <page name="category_page" string="Categorie CRM">
                                    <group colspan="4" col="4">
                                        <separator string="Categorie CRM" colspan="4"/>
                                        <field name="category_ids" nolabel="1">
                                            <tree string="Categorie" editable="bottom" colors="grey: hubspot_on == False">
                                                <field name="hubspot_id" invisible="1" />
                                                <field name="hubspot_on" />
                                                <field name="category_id" />
                                                <button name="button_odoo_contact" type="object" string="Lista contatti correnti" />

                                                <field name="name" />
                                                <button name="button_update_contact" type="object" string="Pubblica categoria (tutti)" attrs="{'invisible': [('hubspot_on', '=', False)]}" />
                                                <button name="button_update_contact_new" type="object" string="Pubblica categoria (mancanti)" attrs="{'invisible': [('hubspot_on', '=', False)]}" />
                                                <button name="button_update_contact_link" type="object" string="Collega contatti ad azienda" attrs="{'invisible': [('hubspot_on', '=', False)]}" />
                                            </tree>
                                        </field>
                                    </group>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_hubspot_connector">
            <field name="name">Hubspot Connector</field>
            <field name="res_model">hubspot.connector</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="hubspot_connector_view_tree"/>
        </record>

        <menuitem
            parent="base.menu_base_partner"
            id="menu_hubspot_root"
            name="Hubspot"
            sequence="0"
            groups="hubspot_connector.group_hubspot_manager,hubspot_connector.group_hubspot_user"
            />
            <menuitem
                parent="menu_hubspot_root"
                id="menu_hubspot_root_connector"
                action="action_hubspot_connector"
                sequence="10"/>

    </data>
</openerp>

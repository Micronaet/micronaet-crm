<?xml version="1.0"?>
<openerp>
    <data>
        <!--res.partner-->
        <record model="ir.ui.view" id="view_res_partner_crm_tree">
            <field name="name">res.partner.crm.tree</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <tree string="Partner CRM">        
                    <field name="name" />
                    <field name="phone" />
                    <field name="mobile" />
                    <field name="fax" />
                    <field name="email" />
                    <field name="street" />
                    <field name="city" />
                    <field name="country_id" />
                    <field name="newsletter_category_id" />
                    <!--<field name="type_id" />-->
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_res_partner_crm_form">
            <field name="name">res.partner.crm.form</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form string="Partner CRM" version="7.0">        
                    <sheet>
                        <group col="4" colspan="4">
                            <field name="name" />
                            <field name="phone" />
                            <field name="mobile" />
                            <field name="fax" />
                            <field name="email" />
                            <field name="street" />
                            <field name="city" />
                            <field name="country_id" />
                            <field name="newsletter_category_id" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="view_res_partner_crm_search">
            <field name="name">res.partner.crm.search</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <search string="Partner CRM" version="7.0">        
                    <field name="name" />
                    <field name="crm_level" filter_domain="[('crm_level','>', 0)]"/>
                    <field name="crm_level" filter_domain="[('crm_level','=', 0)]"/>              
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_res_partner_crm">
            <field name="name">res.partner.crm</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_res_partner_crm_tree"/>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>
        <menuitem 
            parent="" 
            id="menu_action_openerp_model_tree" 
            action="view_res_partner_crm_tree"/>
        
    </data>
</openerp>


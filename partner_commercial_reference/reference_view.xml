<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_res_partner_refecente_form">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[3]">
                    <page string="Refecence">
                        <group colspan="4" col="4">
                            <field name="reference_status" />
                            <field name="refecente_date" />
                            <separator string="Reference" colspan="4"/>
                            <field name="reference_text" colspan="4" nolabel="1"/>
                        </group>    
                    </page>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="view_res_partner_tree">
            <field name="name">res.partner.tree</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <field name="email" position="after">
                    <field name="reference_status" />
                </field>
            </field>
        </record>
    </data>
</openerp>

